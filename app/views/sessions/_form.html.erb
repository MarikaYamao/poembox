<div class="modal-dialog">
  <div class="modal-content">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t '.login' %></div>
      <div class="panel-body">
        <%= form_with(url: login_path, remote: true, class: 'login-form') do |f| %>
          <%= render 'layouts/flash_messages' %>
          <div class="form-group">
            <%= f.label :email, t('activerecord.attributes.user.email') %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, t('activerecord.attributes.user.password') %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :remember_me, t('activerecord.attributes.user.password') do %>
            <%= f.check_box :remember_me, class: 'form-control' %>
              <span><%= t '.remember_me' %></span>
            <% end %>
          </div>
          <div class="form-group forgot-password">
            <%= link_to t('.forgot'), new_password_reset_path  %>
          </div>
          <div class="text-right">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t '.cancel' %></button>
            <%= f.submit t('.login'), class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>