<div class="modal-dialog">
  <div class="modal-content">
    <div class="panel panel-default">
      <div class="panel-heading"><%= t '.postphoto' %></div>
      <div class="panel-body">
        <%= form_with(model: @photo, remote: true) do |f| %>
          <%= render 'layouts/flash_messages' %>
          <div class="form-group">
            <%= f.label :image_name, t('.select'), class: 'btn btn-secondary' %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t '.cancel' %></button>
            <%= f.submit t('.post'), class: 'btn btn-success hidden', id: 'post-photo' %>
            <%= f.file_field :image_name %>
            <img id="photo-preview">
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('photo_image_name').addEventListener('change', function (e) {
    var file = e.target.files[0];
    var blobUrl = window.URL.createObjectURL(file);
    var img = document.getElementById('photo-preview');
    img.src = blobUrl;
    var post = document.getElementById('post-photo');
    post.classList.remove('hidden');
});
</script>