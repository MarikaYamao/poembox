<ul class="media-list">
    <li class="media">
      <div class="media-left">
        <%= image_tag @photo.user.image, class: 'user-icon'  %>
        <div>
          <%= link_to @photo.user.name, user_path(@photo.user), class: 'user-name' %>
          <span class="post-date">posted at <%= @photo.created_at.strftime("%Y/%m/%d %H:%M") %></span>
        </div>
      </div>
      <div class="media-body">
        <div>
          <p><%= image_tag @photo.image_name , class:'img-responsive' %></p>
        </div>
        <div>
          <% if current_user == @photo.user %>
            <%= link_to "Delete", @photo, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          <% if logged_in? %>
          <%= link_to 'Post Poem', new_poem_path(@photo.id), class: 'btn btn-success btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
</ul>
  <%= render 'poems/photo' %>