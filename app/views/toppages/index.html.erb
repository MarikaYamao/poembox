<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>文字に感情を乗せて</h1>
          <% unless logged_in? %>
            <%= link_to 'POEMBOXを始める', signup_path, class: 'btn btn-success btn-lg' %>

  

          <% end %>
      </div>
    </div>
  </div>
<% end %>
<div class="tabs">
  <input id="poem" type="radio" name="tab_item">
  <label class="tab_item" for="poem">ポエム</label>
  
  <input id="photo" type="radio" name="tab_item" checked>
  <label class="tab_item" for="photo">写真</label>
  
  <div class="tab_content" id="poem_content">
    <div class="tab_content_description">
      <%= render 'poems/poem', poems: @poems %>
    </div>
  </div>
  
  <div class="tab_content" id="photo_content">
    <div class="tab_content_description">
      <%= render 'photos/photo', photos: @photos %>
    </div>
  </div>
</div>
