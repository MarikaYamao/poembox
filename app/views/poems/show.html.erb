<ul class="media-list">
    <li class="media">
      <div class="media-left">
        <%= image_tag @photo.user.image, class:'user-icon'  %>
        <div>
          <%= link_to @photo.user.name, user_path(@poem.user) %> 
        </div>
        <%= render 'relationships/follow_button', user: @photo.user %>
      </div>
      <div class="media-body">
        <div>
          <%= image_tag @photo.image_name , class:'img-responsive' %>
        </div>
        <span class="text-muted">posted at <%= @poem.created_at.strftime("%Y/%m/%d %H:%M") %></span>
        <div>
          <%= simple_format(h(@poem.content)) %>
        </div>
        <div>
          <% if current_user == @poem.user %>
            <%= link_to "Delete", @poem, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <%= link_to "Edit", edit_poem_path(@poem.id), class: 'btn btn-success btn-xs' %>
          <% end %>
          <%= render 'relationships/follow_button', user: @poem.user %>
        </div>
      </div>
    </li>
</ul>