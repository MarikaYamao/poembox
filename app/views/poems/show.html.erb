<ul class="media-list">
    <li class="media">
      <div class="media-left">
        <% if @poem.user.image.attached? %>
          <%= image_tag @poem.user.image, class: 'user-icon' %>
        <% end %>
        <div>
          <%= link_to @poem.user.name, user_path(@poem.user), class: 'user-name' %> 
          <span class="post-date">posted at <%= @poem.created_at.strftime("%Y/%m/%d %H:%M") %></span>
        </div>
      </div>
      <div class="media-body">
        <div>
          <%= image_tag @photo.image_name , class:'img-responsive' %>
        </div>
        <div class="poem-container">
          <%= simple_format(h(@poem.content)) %>
        </div>
        <div>
          <% if current_user == @poem.user %>
            <%= link_to "Delete", @poem, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <%= link_to "Edit", edit_poem_path(@poem.id), class: 'btn btn-success btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
</ul>