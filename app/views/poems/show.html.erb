<div class="user" >
  <%= render @poem.user %>
</div>

<div class="contents">
  <p><%= link_to image_tag(@photo.image_name), photo_path(@photo), class: 'img-responsive' %></p>
  <div>
    <% if current_user == @poem.user %>
      <%= link_to "Delete", @poem, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
      <%= link_to "Edit", edit_poem_path(@poem.id), class: 'btn btn-success btn-xs', remote: true %>
    <% end %>
  </div>
  <div class="poem-container">
    <%= simple_format(h(@poem.content)) %>
  </div>
</div>
